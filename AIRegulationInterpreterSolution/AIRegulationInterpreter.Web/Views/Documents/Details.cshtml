@model AIRegulationInterpreter.Web.Models.DocumentDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-lg-8">
        <!-- Document Header -->
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Po?etna</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Dokumenti</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
            
            <h2 class="mb-3">
                <i class="bi bi-file-earmark-text"></i> @Model.Title
            </h2>
            
            <div class="d-flex gap-2 mb-3">
                <span class="badge bg-secondary fs-6">@Model.Type</span>
                <span class="badge bg-info fs-6">Verzija @Model.Version</span>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success fs-6">
                        <i class="bi bi-check-circle"></i> Aktivan
                    </span>
                }
                else
                {
                    <span class="badge bg-danger fs-6">
                        <i class="bi bi-x-circle"></i> Neaktivan
                    </span>
                }
            </div>

            <div class="card bg-light mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">Važe?i od:</small>
                            <p class="mb-0"><strong>@Model.ValidFrom.ToString("dd.MM.yyyy")</strong></p>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Važe?i do:</small>
                            <p class="mb-0">
                                <strong>
                                    @if (Model.ValidUntil.HasValue)
                                    {
                                        @Model.ValidUntil.Value.ToString("dd.MM.yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-success">Trenutno važe?i</span>
                                    }
                                </strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Document Structure -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-list-nested"></i> Struktura dokumenta
                </h5>
            </div>
            <div class="card-body">
                @foreach (var sec in Model.Sections)
                {
                    <div class="mb-4 pb-3 border-bottom">
                        <h5 class="text-primary">@sec.Identifier</h5>
                        <p class="mb-2">@sec.Content</p>
                        
                        @if (sec.SubSections.Any())
                        {
                            <div class="ms-4">
                                @foreach (var subSec in sec.SubSections)
                                {
                                    <div class="mb-3 p-3 bg-light rounded">
                                        <h6 class="text-secondary mb-2">@subSec.Identifier</h6>
                                        <p class="mb-0 small">@subSec.Content</p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Actions -->
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Nazad na listu
            </a>
            <a asp-controller="Query" asp-action="Ask" class="btn btn-primary">
                <i class="bi bi-question-circle"></i> Postavi pitanje o ovom dokumentu
            </a>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Version History -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-clock-history"></i> Istorija verzija
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var version in Model.Versions)
                    {
                        <div class="list-group-item @(version.IsCurrent ? "active" : "")">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <strong>Verzija @version.Version</strong>
                                @if (version.IsCurrent)
                                {
                                    <span class="badge bg-light text-dark">Trenutna</span>
                                }
                            </div>
                            <small class="@(version.IsCurrent ? "text-white-50" : "text-muted")">
                                <i class="bi bi-calendar"></i>
                                @version.ValidFrom.ToString("dd.MM.yyyy")
                                @if (version.ValidUntil.HasValue)
                                {
                                    <text> - @version.ValidUntil.Value.ToString("dd.MM.yyyy")</text>
                                }
                            </small>
                            @if (!string.IsNullOrEmpty(version.Changes))
                            {
                                <p class="mb-0 mt-2 small @(version.IsCurrent ? "" : "text-muted")">
                                    @version.Changes
                                </p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Informacije
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Broj ?lanova:</small>
                    <p class="mb-0"><strong>@Model.Sections.Count</strong></p>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Ukupno sekcija:</small>
                    <p class="mb-0"><strong>@(Model.Sections.Sum(s => s.SubSections.Count + 1))</strong></p>
                </div>
                <div class="mb-0">
                    <small class="text-muted">Broj verzija:</small>
                    <p class="mb-0"><strong>@Model.Versions.Count</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>
