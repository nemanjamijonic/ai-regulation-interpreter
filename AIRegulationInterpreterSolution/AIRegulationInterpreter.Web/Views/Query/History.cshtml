@model AIRegulationInterpreter.Web.Models.QueryHistoryViewModel
@{
    ViewData["Title"] = "Istorija upita";
    
    string GetConfidenceBadge(double confidence)
    {
        if (confidence >= 0.8) return "bg-success";
        if (confidence >= 0.6) return "bg-warning";
        return "bg-danger";
    }
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <h2 class="mb-4">
            <i class="bi bi-clock-history"></i> Istorija upita
        </h2>

        @if (Model.Queries.Any())
        {
            <div class="mb-3 text-muted">
                Ukupno upita: <strong>@Model.Queries.Count</strong>
            </div>

            @foreach (var query in Model.Queries)
            {
                <div class="card mb-3 shadow-sm hover-shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h5 class="card-title">
                                    <i class="bi bi-question-circle text-primary"></i>
                                    @query.Question
                                </h5>
                                <p class="card-text text-muted mb-2">
                                    @query.ShortAnswer
                                </p>
                                <div class="d-flex gap-2 align-items-center">
                                    <span class="badge @GetConfidenceBadge(query.ConfidenceLevel)">
                                        @((query.ConfidenceLevel * 100).ToString("F0"))% pouzdanost
                                    </span>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i>
                                        @query.Timestamp.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                            <div class="ms-3">
                                <a asp-action="Details" asp-route-id="@query.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Detalji
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                Nemate još postavljenih pitanja. 
                <a asp-action="Ask" class="alert-link">Postavite prvo pitanje</a>.
            </div>
        }

        <div class="mt-4">
            <a asp-action="Ask" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Novo pitanje
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-house"></i> Po?etna
            </a>
        </div>
    </div>
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease;
    }
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
